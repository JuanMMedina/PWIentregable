<div class="container-fluid bg-dark m-0" style="height: 100vh">
    <div class="row justify-content-center">
        <div class="col-7 text-light">
            <form action="/admin/empleados/create" method="post" enctype="multipart/form-data">
                <div class="form group">
                    <label for="nombre">Nombre<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="nombre" id="nombre">
                </div>
                <div class="form group">
                    <label for="apellido">Apellido<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="apellido" id="apellido">
                </div>
                <div class="form group">
                    <label for="telefono">Telefono<span class="text-danger">*</span></label>
                    <input type="number" class="form-control" name="telefono" id="telefono">
                </div>
                <div class="form group">
                    <label for="mail">Email<span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="mail" id="mail">
                </div>
                <div class="form group">
                    <label for="direccion">Direccion<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="direccion" id="direccion">
                </div>
                <div class="form group">
                    <label for="imagen">Agregar Imagen<span class="text-danger">*</span></label>
                    <input type="file" class="form-control" name="imagen" id="imagen">
                </div>
                <div class="form group">
                    <button type="submit" class="btn btn-info mt-2">Agregar Empleado</button>
                </div>
            </form>
            <a href="/admin/empleados" class="btn btn-info mt-2">Volver</a>
        </div>
    </div>
</div>