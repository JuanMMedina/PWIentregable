<div class="container-fluid bg-dark m-0" style="height: 100vh">
    <div class="row justify-content-center">
        <div class="col-7 text-light">
            <form action="/admin/categorias/create" method="post">
                <div class="form group">
                    <label for="nombre">Nombre de la categoria<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="nombre" id="nombre">
                </div>
                <div class="form group">
                    <label for="descripcion">Descripcion de la categoria<span class="text-danger">*</span></label>
                    <textarea type="text" class="form-control" name="descripcion" id="descripcion"></textarea>
                </div>
                <div class="form group">
                    <button type="submit" class="btn btn-info mt-2">Agregar categoria</button>
                </div>
            </form>
            <a href="/admin/categorias" class="btn btn-info mt-2">Volver</a>
        </div>
    </div>
</div>